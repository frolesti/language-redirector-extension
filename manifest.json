{
  "manifest_version": 3,
  "name": "Auto Language Redirector",
  "version": "1.1",
  "description": "Detecta si una pàgina té versió en el teu idioma i et redirigeix automàticament.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}