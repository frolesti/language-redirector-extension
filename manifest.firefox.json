{
  "manifest_version": 2,
  "name": "{{NAME}}",
  "version": "{{VERSION}}",
  "description": "{{DESCRIPTION}}",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "128": "icons/logo.png"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "128": "icons/logo.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{{ID_NAME}}@language-redirector",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}
