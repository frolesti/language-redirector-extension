{
  "manifest_version": 2,
  "name": "{{NAME}}",
  "version": "{{VERSION}}",
  "description": "{{DESCRIPTION}}",
  "permissions": [
    "storage"
  ],
  "icons": {
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "encatalasisplau@extension",
      "strict_min_version": "57.0"
    }
  }
}
